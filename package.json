{
  "name": "ccp-cli",
  "version": "1.0.0",
  "description": "OpenAI-compatible API proxy that translates requests into Claude Code CLI invocations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ccp": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/cli.js start",
    "dev": "tsx watch src/cli.ts start",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Erdinc Curebal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdinccurebal/claude-code-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/erdinccurebal/claude-code-proxy/issues"
  },
  "homepage": "https://github.com/erdinccurebal/claude-code-proxy#readme",
  "keywords": [
    "claude",
    "claude-code",
    "openai",
    "proxy",
    "api",
    "llm",
    "anthropic",
    "ai"
  ],
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
